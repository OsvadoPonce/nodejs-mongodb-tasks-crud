<div class="card card-body p4 rounded-0 bg-dark text-white">

  <h3>Add a Task</h3>
  <form action="/task/add" method="POST">

    <div>
      <label for="title">Escribe un titulo:</label>
      <input
        type="text"
        name="title"
        placeholder="title"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="description">descripción:</label>
      <textarea
        name="description"
        placeholder="descripción"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <button class="btn btn-primary btn-sm mt-2">Add</button>

  </form>
</div>